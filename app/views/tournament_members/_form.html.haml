= form_for(tournament_member) do |f|
  - if tournament_member.errors.any?
    #error_explanation
      %h2
        = pluralize(tournament_member.errors.count, "error")
        prohibited this tournament_member from being saved:
      %ul
        - tournament_member.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :team_id
    = f.number_field :team_id
  .field
    = f.label :tournament_id
    = f.number_field :tournament_id
  .actions
    = f.submit
